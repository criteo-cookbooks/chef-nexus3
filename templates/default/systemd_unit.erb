[Unit]
Description=nexus service (<%= @instance_name %>)
After=network.target

[Service]
Type=forking
LimitNOFILE=<%= @nofile_limit %>
ExecStart=<%= @install_dir %>/bin/nexus start
ExecStop=<%= @install_dir %>/bin/nexus stop
User=<%= @nexus3_user %>
Restart=on-abort

[Install]
WantedBy=multi-user.target
